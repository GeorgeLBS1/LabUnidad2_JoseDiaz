@model IEnumerable<Lab_2_JoseDiaz.Models.EmpleadoViewModel>

@{
    ViewData["Title"] = "Index";
}

<h2>Listado de Empleados </h2>

<p>
    <p><a asp-area="" asp-controller="Empleado" asp-action="Oficina">Disponibles en la oficina</a></p>
    <p><a asp-area="" asp-controller="Empleado" asp-action="OfiF">Fuera de la oficina</a></p>
    <form asp-controller="Empleado" asp-action="Index" method="get">
<p>
    Buscar por: 
     Nombre: <input type="text" name="SearchString" value="@ViewBag.SearchString" />
    <input type="submit" value="Search" />
     Horas Trabajadas: <input type="text" name="SearchHoras" value="@ViewBag.SearchHoras" />
    <input type="submit" value="Search" />
     Id: <input type="text" name="SearchID" value="@ViewBag.SearchID" />
    <input type="submit" value="Search" />
</p>

    </form>
<a asp-action="Create">Añadir Nuevo empleado</a>
</p>



<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.horas_trabajadas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.hora_deEntrada)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.horas_trabajadas)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.hora_deEntrada)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
